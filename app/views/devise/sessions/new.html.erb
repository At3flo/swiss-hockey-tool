<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-6 mx-auto">
      <div class="form-login">
        <h1><%= t 'login' %></h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="row justify-content-center">
              <div class="mx-3">
                <%= f.input :email,
                                required: false,
                                autofocus: true,
                                input_html: { autocomplete: "email"} %>
              </div>
              <div class="mx-3">
                <%= f.input :password,
                                required: false,
                                input_html: { autocomplete: "current-password"} %>

              </div>

            </div>
            <div class="d-flex justify-content-center">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, class: "btn btn-warning btn-login" %>
            <div class="form-group d-flex mb-0 justify-content-center align-items-center">
              <div class="mx-1">
                <%= link_to root_path, class: "btn btn-outline-secondary" do %>
                <%= t 'cancel' %>
                <% end %>
              </div>
              <div class="mx-1">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>