<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-6 mx-auto">
      <div class="form-login">
        <h2><%= t 'login' %></h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", style: "width: 100%; margin-bottom: 15px" } %>
            <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", style: "width: 100%; margin-bottom: 15px" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" , class: "btn btn-primary btn-login" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>