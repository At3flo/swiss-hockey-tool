      </div>
      <div class="modal-body">
        <%= "<form action='/events' method='post'>".html_safe %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <!-- Date of the tournament -->
          <div class="form-row">
            <div class="form-group col-sm-4">
              <%= t "date" %> :
            </div>
            <div class="form-group col-sm-4">
              <label class="sr-only" for="date"><%= t "date" %></label>
              <input type="date" class="form-control form-control-sm mr-1" id="date" name="date" required>
            </div>
          </div>
          <!-- Period of the tournament -->
          <div class="form-row">
            <div class="form-group col-sm-4">
              <%= t "period" %> :
            </div>
            <div class="form-group col-sm-4">
              <div class="radio"><label><input type="radio" name="period" value="morning"> <%= t "morning" %></label></div>
              <div class="radio"><label><input type="radio" name="period" value="afternoon"> <%= t "afternoon" %></label></div>
            </div>
            <div class="form-group col-sm-4">
              <div class="radio"><label><input type="radio" name="period" value="full-day"> <%= t "fullDay" %></label></div>
            </div>
          </div>
          <!-- Starting time of the tournament -->
          <div class="form-row">
            <div class="form-group col-sm-4">
              <%= t "startTime" %> :
            </div>
            <div class="form-group col-sm-4">
              <label class="sr-only" for="start-time"><%= t "startTime" %></label>
              <input type="time" class="form-control form-control-sm mr-1" id="start-time" name="start-time">
            </div>
          </div>
          <!-- Who's the organizer of the tournament based on the today (october 2018) updated list http://www.swisshockey.org -->
          <div class="form-row">
            <div class="form-group col-sm-4">
              <%= t "organizer" %> :
            </div>
            <div class="form-group col-sm-8">
              <label class="sr-only" for="organizer"><%= t "organizer" %></label>
              <select class="selectpicker form-control form-control-sm mr-1" id="organizer" name="organizer" required
                data-style="btn-default">

                <option>Basler Hockey Club 1911</option>
                <option>Berner Hockey-Club</option>
                <option>Black Boys Hockey Club Genève</option>
                <option>Grasshopper Club Zürich</option>
                <option>HC La Côte</option>
                <option>HC Olten</option>
                <option>HC Rotweiss Wettingen</option>
                <option>HC Steffisburg</option>
                <option>HC Wettingen</option>
                <option>Hockey Athletic Club Lugano</option>
                <option>Luzerner SC</option>
                <option>Neuchâtel Hockey Club</option>
                <option>Red Sox Hockey Club Zürich</option>
                <option>Servette HC</option>
                <option>Stade Lausanne Hockey sur Gazon</option>
                <option>USTS Field Hockey</option>
                <option>Urania Genève Sports</option>
                <option>Zürichsee Hockey Team</option>
                <option>HC Konstanz</option>
                <option>Grizzlies St. Gallen</option>
                <option>Spielgemeinschaft Zürich U15 Girls</option>
                <option>AGHGA Filles U15</option>
                <option>Spielgemeinschaft BeHC/HCSt</option>
                <option>Hockey Club Lahr</option>
              </select>
            </div>
          </div>
          <!-- Outdoor or indoor tournament -->
          <div class="form-row">
            <div class="form-group col-sm-4">
              <%= t "field" %> :
            </div>
            <div class="form-group col-sm-4">
              <div class="radio"><label><input type="radio" name="outdoor" value="true"> <%= t "outdoor" %></label></div>
            </div>
            <div class="form-group col-sm-4">
              <div class="radio"><label><input type="radio" name="outdoor" value="false"> <%= t "indoor" %></label></div>
            </div>
          </div>
          <!-- Location of the tournament -->
          <div class="form-row">
            <div class="form-group col-sm-4">
              <%= t "location" %> :
            </div>
            <div class="form-group col-sm-8">
              <label class="sr-only" for="location"><%= t "location" %>Location</span></label>
              <textarea rows="3" class="form-control form-control-sm mr-1" id="location" name="location" required></textarea>
            </div>
          </div>
          <!-- Who's the person responsible of the tournament -->
          <div class="form-row">
            <div class="form-group col-sm-4">
              <%= t "contact" %> :
            </div>
            <div class="form-group col-sm-8">
              <label class="sr-only" for="contact"><%= t "contact" %></label>
              <textarea rows="1" class="form-control form-control-sm mr-1" id="contact" name="contact" required></textarea>
            </div>
          </div>
          <!-- Categories available for the tournament -->
          <div class="form-row">
            <div class="form-group col-sm-4">
              <%= t "categories" %> :
            </div>
            <div class="form-group col-sm-4">
