              <div class="checkbox"><label><input type="checkbox" value=""> <%= t "U12Elite" %></label></div>
              <div class="checkbox"><label><input type="checkbox" value=""> <%= t "U12Girls" %></label></div>
              <div class="checkbox"><label><input type="checkbox" value=""> <%= t "U15Girls" %></label></div>
            </div>
          </div>
          <!-- Others infos -->
          <div class="form-row">
            <div class="form-group col-sm-4">
              <%= t "otherInfos" %> :
            </div>
            <div class="form-group col-sm-8">
              <label class="sr-only" for="other-infos"><%= t "otherInfos" %></label>
              <textarea rows="4" class="form-control form-control-sm mr-1" id="other-infos" name="other-infos"></textarea>
            </div>
          </div>
          <!-- Submit and cancel buttons -->
